{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "types": ["node", "mocha"],
    "esModuleInterop": true
  },
  "include": [
    "packages/core/**/*.js",
    "packages/tabs/**/*.js",
    "packages/singleton-manager/**/*.js",
    "packages/localize/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "**/coverage/*",
    "**/dist/**/*",
    "packages/**/test-helpers"
  ]
}
